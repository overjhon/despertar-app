# NPM Configuration for Mundo Delas
# Resolve peer dependency conflicts automatically

# Use npm v9+ behavior for peer dependencies
auto-install-peers=true

# Strict peer dependencies (will fail on unresolved)
legacy-peer-deps=false

# Engine strict mode
engine-strict=false

# Progress for CI/CD (disabled for Vercel)
progress=false

# Prefer online for fresh installs
prefer-online=true

# Audit level
audit-level=moderate

